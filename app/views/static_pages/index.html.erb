<%= render 'partials/navbar' %>

<div class="jumbotron">
  <div class="container" style="margin-top: 4%;">
  	<h1 class="text-center">PEDS</h1>
  	<p class="text-center"><em>Presidential Election Database System</em></p>
  	<p class="text-center tryit-btn"><a class="btn btn-primary btn-lg" href="#" role="button">Try it out!</a>
  </div>
</div>
<section class="forms-section">
	<div class="forms-container">
		<div class="row">
			<div class="form-col col-md-7">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Panel title</h3>
					</div>
					<div class="panel-body">
						<form>
							<div class="form-group dropdown-group">
								<label for="sel1">Select a query:</label>
								<select class="form-control query-select" id="sel1" onchange="toggleForm(this.value)">
									<option value="blank">--</option>
									<option value="election_year">Query for a given election year</option>
									<option>Query for a given president/candidate</option>
									<option>Query for re-elected on non-contiguous times</option>
									<option>Swing candidates</option>
									<option>Party historical query</option>
									<option>Presidents without election</option>
									<option>Presidents sorted by number of wins</option>
									<option>Presidents who ran the most times before winning</option>
									<option>Candidates who lost the most without winning</option>
								</select>
							</div>

							<hr>

							<div class="form-group dropdown-group election_year">
								<label for="sel1">Select an election year:</label>
								<select class="form-control param-select" id="sel1">
									<% count = 2016 %>
									<% while count >= 1789 do %>
										<option><%= count %></option>
										<% count = count - 4 %>
									<% end %>
									<option>1789</option>
								</select>
							</div>


							<button type="submit" class="btn btn-success">Fetch results!</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<%= render 'partials/footer' %>

<script>

function toggleForm(param) {
	console.log(param);
	if (param == "election_year") {
		$(".election_year").fadeIn();
		/* code to hide others */
	} else if (param == "blank") {
		$(".election_year").fadeOut();
	}
}

</script>